lexer grammar CymbolLexer;


COMMA : ',' ;
ADD : '+' ;
SUB : '-' ;
ASSIGN : '=';
EQUAL : '==' ;
SEMICOLON : ';' ;

STAR_MARK : ASTERISK ;
EXCLAMATION_MARK : '!' ;

L_ROUND_BRACKET : '(' ;
R_ROUND_BRACKET : ')' ;

L_SQUARE_BRACKET : '[' ;
R_SQUARE_BRACKET : ']' ;

L_CURLY_BRACKET : '{' ;
R_CURLY_BRACKET : '}' ;

FLOAT_TYPE : 'float' ;
INT_TYPE : 'int' ;
VOID_TYPE : 'void' ;

IF : 'if' ;
ELSEIF : 'else if' ;
ELSE : 'else' ;
RETURN : 'return' ;
THEN : 'then' ;

ID : LETTER+ ;
INT : DIGIT+ ;

fragment DIGIT : [0-9] ;
fragment LETTER : [a-zA-Z] ;
fragment ASTERISK : '*' ;
